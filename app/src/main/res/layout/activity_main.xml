<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        android:id="@+id/dlMain"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
                android:id="@+id/mvMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true">

        </com.baidu.mapapi.map.MapView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                android:layout_marginTop="@dimen/serchbar_top_bottom_margins"
                app:cardElevation="@dimen/material_component_cards_elevation">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/tbMain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_layout_search_bar_height"
                    app:navigationIcon="@drawable/ic_menu_grey_800_24dp"
                    app:title="@string/search_hint"
                    app:titleTextColor="@color/secondary_text"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light"
                    app:titleTextAppearance="@style/Toolbar.TitleText">
            </android.support.v7.widget.Toolbar>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabMyLocation"
                app:fabCustomSize="@dimen/material_component_floating_action_button_mini_size"
                android:layout_width="@dimen/material_component_floating_action_button_mini_size"
                android:layout_height="@dimen/material_component_floating_action_button_mini_size"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
                android:layout_marginBottom="@dimen/material_component_floating_action_button_margin_minibottom"
                android:backgroundTint="@color/icons"
                app:borderWidth="0dp"
                android:src="@drawable/ic_my_location_grey_800_24dp"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabDirection"
                app:fabCustomSize="@dimen/material_component_floating_action_button_size"
                android:layout_width="@dimen/material_component_floating_action_button_size"
                android:layout_height="@dimen/material_component_floating_action_button_size"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
                android:layout_marginBottom="@dimen/material_component_floating_action_button_margin_bottom"
                android:src="@drawable/ic_directions_white_24dp"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabCollect"
                app:fabCustomSize="@dimen/material_component_floating_action_button_mini_size"
                android:layout_width="@dimen/material_component_floating_action_button_mini_size"
                android:layout_height="@dimen/material_component_floating_action_button_mini_size"
                app:layout_anchor="@id/cvPois"
                app:layout_anchorGravity="top|end"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/fab_left_right_margins"/>


        <android.support.v7.widget.CardView
                android:id="@+id/cvPois"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_component_bottom_sheet_expanded_height"
                android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                app:cardElevation="@dimen/material_component_cards_elevation"
                app:behavior_peekHeight="@dimen/material_component_bottom_sheet_collapsed_height"
                app:behavior_hideable="true"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPois"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>



    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/nvMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/layout_nav_head"
            app:menu="@menu/nav_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>