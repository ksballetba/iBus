<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/walking_step_card_height"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/ivRouteStepType"
            android:layout_width="@dimen/material_layout_icon"
            android:layout_height="@dimen/material_layout_icon"
            android:src="@drawable/ic_directions_walk_grey_800_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/view"/>


    <TextView
            android:id="@+id/tvRouteStepInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_left_right_margins"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>