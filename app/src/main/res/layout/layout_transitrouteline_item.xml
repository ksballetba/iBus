<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
        android:layout_width="match_parent"
        android:layout_height="@dimen/routeline_card_height"
        app:cardCornerRadius="@dimen/banner_radius"
        android:id="@+id/materialCardView">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivRouteLineDuration"
                android:src="@drawable/ic_timer_grey_800_24dp"
                android:layout_width="@dimen/material_layout_mini_icon"
                android:layout_height="@dimen/material_layout_mini_icon"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/routeline_card_edge_top_bottom_margins"
                app:layout_constraintBottom_toTopOf="@+id/ivRouteLineWalkingDistance"/>

        <ImageView
                android:id="@+id/ivRouteLineWalkingDistance"
                android:src="@drawable/ic_directions_walk_grey_800_24dp"
                android:layout_width="@dimen/material_layout_mini_icon"
                android:layout_height="@dimen/material_layout_mini_icon"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                android:layout_marginBottom="@dimen/routeline_card_edge_top_bottom_margins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivRouteLineDuration"/>


        <TextView
                android:id="@+id/tvRouteLineDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_typography_body1"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                app:layout_constraintStart_toEndOf="@id/ivRouteLineDuration"
                app:layout_constraintBottom_toBottomOf="@+id/ivRouteLineDuration"
                app:layout_constraintTop_toTopOf="@+id/ivRouteLineDuration"/>

        <TextView
                android:id="@+id/tvWalkingDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_typography_body1"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                app:layout_constraintStart_toEndOf="@id/ivRouteLineWalkingDistance"
                app:layout_constraintBottom_toBottomOf="@+id/ivRouteLineWalkingDistance"
                app:layout_constraintTop_toTopOf="@+id/ivRouteLineWalkingDistance"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="120dp"
                android:layout_marginBottom="@dimen/routeline_card_edge_top_bottom_margins"
                android:layout_marginTop="@dimen/routeline_card_edge_top_bottom_margins"
                android:id="@+id/view"/>

        <TextView
                android:id="@+id/tvRouteLineSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_typography_body1"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                app:layout_constraintStart_toEndOf="@id/view"
                android:layout_marginTop="@dimen/routeline_card_edge_top_bottom_margins"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvRouteLinePrice"/>

        <TextView
                android:id="@+id/tvRouteLinePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/routeline_card_edge_top_bottom_margins"
                android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                app:layout_constraintTop_toBottomOf="@+id/tvRouteLineSteps"/>


    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>