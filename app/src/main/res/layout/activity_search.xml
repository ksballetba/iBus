<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activity.SearchActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/cvSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_layout_search_bar_height"
            app:cardElevation="@dimen/material_component_cards_elevation"
            android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.SearchView
                android:id="@+id/svSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iconifiedByDefault="false"
                android:paddingStart="-4dp"
                android:layout_marginEnd="60dp"
                app:queryBackground="@null"
                app:showDividers="none"
                app:submitBackground="@null"
                app:queryHint="@string/search"
                android:focusable="true"
                app:searchIcon="@drawable/ic_arrow_back_grey_800_24dp"/>


        <View
                android:layout_width="@dimen/material_layout_devide_width"
                android:layout_height="20dp"
                android:layout_gravity="end|center"
                android:background="@color/divider"
                android:layout_marginEnd="60dp"/>

        <TextView
                android:id="@+id/btnSearch"
                android:layout_width="60dp"
                android:layout_height="@dimen/material_layout_search_bar_height"
                android:gravity="center"
                android:text="@string/search"
                android:textSize="@dimen/material_typography_button"
                android:textColor="@color/primary_text"
                android:layout_gravity="end|center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cvNearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="@dimen/material_component_cards_elevation"
            android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/ivCurrentCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_terrain_grey_800_18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                    android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tvCurrentCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    app:layout_constraintStart_toEndOf="@+id/ivCurrentCity"
                    android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                    android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tvSearchNearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:text="@string/search_nearby"
                    app:layout_constraintEnd_toStartOf="@+id/cbSearchNearby"
                    android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                    app:layout_constraintTop_toTopOf="parent"/>

            <CheckBox
                    android:id="@+id/cbSearchNearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSurrounding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvSearchNearby"
                    android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cvSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="@dimen/material_component_cards_elevation"
            android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSuggestPois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>