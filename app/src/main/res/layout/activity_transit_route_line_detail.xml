<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.TransitRouteLineDetailActivity">

    <com.baidu.mapapi.map.MapView
            android:id="@+id/mvTransitRouteLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.baidu.mapapi.map.MapView>

    <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_round"
            android:layout_marginStart="@dimen/material_component_bottom_sheet_edge_left_right_margins"
            android:layout_marginTop="34dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLineMyLocation"
            android:layout_gravity="bottom|start"
            app:fabCustomSize="@dimen/material_component_floating_action_button_mini_size"
            android:layout_width="@dimen/material_component_floating_action_button_mini_size"
            android:layout_height="@dimen/material_component_floating_action_button_mini_size"
            android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
            android:layout_marginBottom="236dp"
            android:backgroundTint="@color/icons"
            app:borderWidth="0dp"
            android:src="@drawable/ic_my_location_grey_800_24dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLineCollect"
            app:fabCustomSize="@dimen/material_component_floating_action_button_size"
            android:layout_width="@dimen/material_component_floating_action_button_size"
            android:layout_height="@dimen/material_component_floating_action_button_size"
            android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
            android:layout_marginEnd="@dimen/fab_left_right_margins"
            app:layout_anchor="@id/cvLineSteps"
            app:layout_anchorGravity="top|end"
            android:src="@drawable/ic_star_border_white_24dp"/>

    <android.support.v7.widget.CardView
            android:id="@+id/cvLineSteps"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            app:cardElevation="@dimen/material_component_cards_elevation"
            app:behavior_peekHeight="@dimen/material_component_bottom_sheet_collapsed_height"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTransitRouteSteps"
                android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>