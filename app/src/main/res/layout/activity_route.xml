<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RouteActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/ablRoute"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:id="@+id/tbRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_layout_route_bar_height"
                app:title=""
                app:navigationIcon="@drawable/ic_arrow_back_grey_800_24dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">

                <android.support.constraint.ConstraintLayout
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_layout_route_bar_height">

                    <TextView
                            android:layout_gravity="top"
                            android:id="@+id/tvStartLocation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_layout_location_bar_height"
                            android:textSize="@dimen/material_typography_body1"
                            android:paddingStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                            android:gravity="center_vertical"
                            android:textColor="@color/primary_text"
                            android:textColorHint="@color/secondary_text"
                            android:background="@color/background_text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tvEndLocation"/>

                    <TextView
                            android:id="@+id/tvEndLocation"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:background="@color/background_text"
                            android:layout_height="@dimen/material_layout_location_bar_height"
                            android:textSize="@dimen/material_typography_body1"
                            android:paddingStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                            android:gravity="center_vertical"
                            android:textColor="@color/primary_text"
                            android:textColorHint="@color/secondary_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvStartLocation"/>
                </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
                android:id="@+id/tabRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_layout_search_bar_height"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/primary_text"
                app:tabTextColor="@color/primary_text"
                app:tabRippleColor="@color/background_text">

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTransitRouteLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

    </android.support.v7.widget.RecyclerView>

    <com.baidu.mapapi.map.MapView
            android:id="@+id/mvRoute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
    </com.baidu.mapapi.map.MapView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabRouteMyLocation"
            app:fabCustomSize="@dimen/material_component_floating_action_button_mini_size"
            android:layout_width="@dimen/material_component_floating_action_button_mini_size"
            android:layout_height="@dimen/material_component_floating_action_button_mini_size"
            android:layout_gravity="bottom|start"
            android:visibility="gone"
            android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
            android:layout_marginBottom="112dp"
            android:backgroundTint="@color/icons"
            app:borderWidth="0dp"
            android:src="@drawable/ic_my_location_grey_800_24dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLineCollect"
            app:fabCustomSize="@dimen/material_component_floating_action_button_size"
            android:layout_width="@dimen/material_component_floating_action_button_size"
            android:layout_height="@dimen/material_component_floating_action_button_size"
            android:layout_marginStart="@dimen/material_component_floating_action_button_margin"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/fab_left_right_margins"
            app:layout_anchor="@id/cvLine"
            app:layout_anchorGravity="top|end"
            android:src="@drawable/ic_star_border_white_24dp"/>

    <android.support.v7.widget.CardView
            android:id="@+id/cvLine"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:layout_marginRight="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
            android:visibility="gone"
            app:cardElevation="@dimen/material_component_cards_elevation"
            app:behavior_peekHeight="@dimen/routeline_card_height"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOtherRouteSteps"
                android:layout_marginTop="@dimen/material_component_bottom_sheet_edge_left_right_margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>