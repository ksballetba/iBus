<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RouteActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/ablRoute"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:id="@+id/tbRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_layout_route_bar_height"
                app:title=""
                app:navigationIcon="@drawable/ic_arrow_back_grey_800_24dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">

                <android.support.constraint.ConstraintLayout
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/material_layout_route_bar_height">

                    <TextView
                            android:layout_gravity="top"
                            android:id="@+id/tvStartLocation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_layout_location_bar_height"
                            android:textSize="@dimen/material_typography_body1"
                            android:paddingStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                            android:gravity="center_vertical"
                            android:textColor="@color/primary_text"
                            android:textColorHint="@color/secondary_text"
                            android:text="@string/default_start"
                            android:background="@color/background_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tvEndLocation"/>

                    <TextView
                            android:id="@+id/tvEndLocation"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:background="@color/background_text"
                            android:layout_height="@dimen/material_layout_location_bar_height"
                            android:textSize="@dimen/material_typography_body1"
                            android:paddingStart="@dimen/material_component_bottom_sheet_edge_top_bottom_margins"
                            android:gravity="center_vertical"
                            android:textColor="@color/primary_text"
                            android:textColorHint="@color/secondary_text"
                            android:hint="@string/input_end"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvStartLocation"/>
                </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
                android:id="@+id/tabRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_layout_search_bar_height"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/primary_text"
                app:tabTextColor="@color/primary_text"
                app:tabRippleColor="@color/background_text">

        </android.support.design.widget.TabLayout>

        <com.ksballetba.ibus.ui.widget.NoScrollViewPager
                android:id="@+id/vpRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </com.ksballetba.ibus.ui.widget.NoScrollViewPager>


    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>